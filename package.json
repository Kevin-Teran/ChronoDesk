{
  "name": "chronodesk",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -n SERVER,CLIENT -c bgBlue.bold,bgGreen.bold \"npm:server\" \"npm:client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "concurrently \"npm:server-prod\" \"npm:client-prod\"",
    "server-prod": "cd server && npm start",
    "client-prod": "cd client && npm run preview",
    "lint": "concurrently \"cd server && npm run lint\" \"cd client && npm run lint\"",
    "prepare": "husky install",
    "test": "concurrently \"cd server && npm test\" \"cd client && npm test\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}